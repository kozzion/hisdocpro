<UserControl x:Class="HisDocProUI.View.ViewValueInt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HisDocProUI.View"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="150">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="48" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="48" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Command="{Binding CommandSubtractOne}" Content="--"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Value}"/>
        <Button Grid.Row="0" Grid.Column="2" Command="{Binding CommandAddOne}" Content="++"/>

    </Grid>
</UserControl>
